{
  "name": "leetclaude",
  "displayName": "LeetClaude",
  "description": "Practice LeetCode while AI agents code for you",
  "version": "0.0.1",
  "icon": "logo.jpeg",
  "publisher": "your-publisher-id",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/leetclaude"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "leetcode",
    "coding",
    "practice",
    "interview",
    "agent",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "leetclaude.showProblem",
        "title": "LeetClaude: Show Problem"
      },
      {
        "command": "leetclaude.stopProblem",
        "title": "LeetClaude: Close Problem"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && cp src/problems.json out/problems.json",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  }
}